                <StackLayout  
                    Padding="20" Spacing="20">
                    
                    <StackLayout 
                        Padding="20" Spacing="20"
                        HorizontalOptions="Center" 
                        Orientation="Vertical" 
                        VerticalOptions="Center">
                        
                        <Label 
                            Text="{Binding Data.Name}"
                            FontSize="Title"
                            HorizontalOptions="CenterAndExpand"
                            BackgroundColor="LightSeaGreen"/>

                        <Image Source="{Binding Data.ImageURI}" Style="{StaticResource ImageLargeStyle}"
                            BackgroundColor="Gold"/>

                        <StackLayout Style="{StaticResource HorizontalStack}" HorizontalOptions="Center">

                            <Grid
                                HorizontalOptions="Center"
                                WidthRequest="200">
                                
                                <Label
                                    Grid.Column="0"
                                    HorizontalOptions="Start"
                                    Text="Description : " 
                                    Style="{StaticResource LabelStyle}"/>

                                <Label
                                    Grid.Column="1"
                                    HorizontalOptions="EndAndExpand"
                                    Text="{Binding Data.Description}"
                                    FontAttributes="Italic"
                                    Style="{StaticResource ValueStyle}"/>
                            </Grid>

                        </StackLayout>

                        <StackLayout Style="{StaticResource HorizontalStack}" HorizontalOptions="Center">
                            <Grid
                                HorizontalOptions="Center"
                                WidthRequest="200">
                                
                                <Label
                                    Grid.Column="0"
                                    HorizontalOptions="Start"
                                    Text="Location : " 
                                    Style="{StaticResource LabelStyle}"/>
                                
                                <Label
                                    Grid.Column="1"
                                    HorizontalOptions="EndAndExpand"
                                    Text="{Binding Data.Location}" 
                                    Style="{StaticResource ValueStyle}"/>
                                
                            </Grid>

                        </StackLayout>

                        <StackLayout Style="{StaticResource HorizontalStack}" HorizontalOptions="Center">
                            <Grid
                                HorizontalOptions="Center"
                                WidthRequest="200">
                                
                                <Label
                                    Grid.Column="0"
                                    HorizontalOptions="Start"
                                    Text="Attribute : " 
                                    Style="{StaticResource LabelStyle}"/>

                                <Label
                                    Grid.Column="1"
                                    HorizontalOptions="EndAndExpand"
                                    Text="{Binding Data.Attribute}" 
                                    Style="{StaticResource ValueStyle}"/>
                                
                            </Grid>

                        </StackLayout>

                        <StackLayout Style="{StaticResource HorizontalStack}" HorizontalOptions="Center">
                            <Label 
                                Text="Range : " 
                                Style="{StaticResource LabelStyle}"/>
                            <Label 
                                Text="{Binding Data.Range}" 
                                Style="{StaticResource ValueStyle}"/>
                        </StackLayout>

                        <StackLayout Style="{StaticResource HorizontalStack}" HorizontalOptions="Center">
                            <Label 
                                Text="Value : " 
                                Style="{StaticResource LabelStyle}"/>
                            <Label 
                                Text="{Binding Data.Value}" 
                                Style="{StaticResource ValueStyle}"/>
                        </StackLayout>

                        <StackLayout Style="{StaticResource HorizontalStack}" HorizontalOptions="Center">
                            <Label 
                                Text="Damage : " 
                                Style="{StaticResource LabelStyle}"/>
                            <Label 
                                Text="{Binding Data.Damage}" 
                                Style="{StaticResource ValueStyle}"/>
                        </StackLayout>

                    </StackLayout>

                </StackLayout>

            </Frame>

        </ContentView>
    </StackLayout>

    
