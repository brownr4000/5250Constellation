<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Game.Views.MonsterReadPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Update" Clicked="Update_Clicked" IconImageSource="icon_edit.png"/>
        <ToolbarItem Text="Delete" Clicked="Delete_Clicked" IconImageSource="icon_delete.png"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout
                Padding="20" Spacing="20">
                
                <StackLayout 
                    HorizontalOptions="Center" 
                    Orientation="Vertical"
                    VerticalOptions="Center">

                    <Image Source="{Binding Data.ImageURI}" 
                               HeightRequest="200" 
                               WidthRequest="200"/>
                </StackLayout>

                <StackLayout
                            Style="{StaticResource HorizontalStack}"
                            HorizontalOptions="Center" 
                            Orientation="Vertical" 
                            VerticalOptions="Center">

                    <Grid
                            HorizontalOptions="Center"
                            WidthRequest="300">

                        <Label
                                Grid.Column="0"
                                Style="{StaticResource LabelStyle}"
                                Text="Name"
                                FontSize="Small"
                                HorizontalOptions="Start"/>

                        <Label 
                                Grid.Column="1" 
                                Text="{Binding Data.Name}"
                                FontSize="Small"
                                Style="{StaticResource ValueStyle}"
                                HorizontalOptions="EndAndExpand"/>

                    </Grid>
                </StackLayout>

                <StackLayout
                            Style="{StaticResource HorizontalStack}"
                            HorizontalOptions="Center" 
                            Orientation="Vertical" 
                            VerticalOptions="Center">

                    <Grid
                            HorizontalOptions="Center"
                            WidthRequest="300">

                        <Label
                                Grid.Column="0"
                                Style="{StaticResource LabelStyle}"
                                Text="Difficulty"
                                FontSize="Small"
                                HorizontalOptions="Start"/>

                        <Label 
                                Grid.Column="1" 
                                Text="{Binding Data.Difficulty}"
                                FontSize="Small"
                                Style="{StaticResource ValueStyle}"
                                HorizontalOptions="EndAndExpand"/>

                    </Grid>
                </StackLayout>

                <StackLayout
                            Style="{StaticResource HorizontalStack}"
                            HorizontalOptions="Center" 
                            Orientation="Vertical" 
                            VerticalOptions="Center">

                    <Grid
                            HorizontalOptions="Center"
                            WidthRequest="300">

                        <Label
                                Grid.Column="0"
                                Style="{StaticResource LabelStyle}"
                                Text="Experience"
                                FontSize="Small"
                                HorizontalOptions="Start"/>

                        <Label 
                                Grid.Column="1" 
                                Text="{Binding Data.ExperienceTotal}"
                                FontSize="Small"
                                Style="{StaticResource ValueStyle}"
                                HorizontalOptions="EndAndExpand"/>

                    </Grid>
                </StackLayout>

                <StackLayout
                            Style="{StaticResource HorizontalStack}"
                            HorizontalOptions="Center" 
                            Orientation="Vertical" 
                            VerticalOptions="Center">

                    <Grid
                            HorizontalOptions="Center"
                            WidthRequest="300">

                        <Label
                                Grid.Column="0"
                                Style="{StaticResource LabelStyle}"
                                Text="Unique Item"
                                FontSize="Small"
                                HorizontalOptions="Start"/>

                        <Label 
                                Grid.Column="1" 
                                Text="{Binding Data.UniqueItem}"
                                FontSize="Small"
                                Style="{StaticResource ValueStyle}"
                                HorizontalOptions="EndAndExpand"/>

                    </Grid>
                </StackLayout>

                <StackLayout
                            Style="{StaticResource HorizontalStack}"
                            HorizontalOptions="Center" 
                            Orientation="Vertical" 
                            VerticalOptions="Center">

                    <Grid
                            HorizontalOptions="Center"
                            WidthRequest="300">

                        <Label
                                Grid.Column="0"
                                Style="{StaticResource LabelStyle}"
                                Text="Class"
                                FontSize="Small"
                                HorizontalOptions="Start"/>

                        <Label
                                x:Name="ClassValue"
                                Grid.Column="1" 
                                Text="{Binding Data.MonsterJob}"
                                FontSize="Small"
                                Style="{StaticResource ValueStyle}"
                                HorizontalOptions="EndAndExpand"/>

                    </Grid>
                </StackLayout>

                <StackLayout
                            Style="{StaticResource HorizontalStack}"
                            HorizontalOptions="Center" 
                            Orientation="Vertical" 
                            VerticalOptions="Center">

                    <Grid
                            HorizontalOptions="Center"
                            WidthRequest="300">

                        <Label
                                Grid.Column="0"
                                Style="{StaticResource LabelStyle}"
                                Text="Description"
                                FontSize="Small"
                                HorizontalOptions="Start"/>

                        <Label
                                Grid.Column="1" 
                                Text="{Binding Data.Description}"
                                FontSize="Small"
                                Style="{StaticResource ValueStyle}"
                                HorizontalOptions="EndAndExpand"/>

                    </Grid>
                </StackLayout>

                <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand" Padding="0,20,0,0" Spacing="30">
                    <StackLayout Orientation="Horizontal">
                        <Grid
                                HorizontalOptions="Center"
                                WidthRequest="240"
                                HeightRequest="30">

                            <Label Grid.Column="0" Text="Attack"/>
                            <ProgressBar x:Name="AttackProgressBar" Grid.Column="1" Progress="{Binding Data.Attack}" 
                                    ProgressColor="LimeGreen"/>
                            <Label Grid.Column="2" Text="{Binding Data.Attack}" 
                                   x:Name="AttackValue"
                                   Style="{StaticResource ValueStyle}"
                                   Padding="0,0,10,0"
                                   HorizontalOptions="End"
                                   HorizontalTextAlignment="End"/>
                        </Grid>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Grid
                                HorizontalOptions="Center"
                                WidthRequest="240"
                                HeightRequest="30">
                            <Label Grid.Column="0" Text="Defense"/>
                            <ProgressBar x:Name="DefenseProgressBar" Grid.Column="1" Progress="{Binding Data.Defense}" 
                                    ProgressColor="LimeGreen"/>
                            <Label Grid.Column="2" Text="{Binding Data.Defense}" 
                                   x:Name="DefenseValue"
                                   Style="{StaticResource ValueStyle}"
                                   Padding="0,0,10,0"
                                   HorizontalOptions="End"
                                   HorizontalTextAlignment="End"/>
                        </Grid>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Grid
                                HorizontalOptions="Center"
                                WidthRequest="240"
                                HeightRequest="30">
                            <Label Grid.Column="0" Text="Speed"/>
                            <ProgressBar x:Name="SpeedProgressBar" Grid.Column="1" Progress="{Binding Data.Speed}" 
                                    ProgressColor="LimeGreen"/>
                            <Label Grid.Column="2" Text="{Binding Data.Speed}" 
                                   x:Name="SpeedValue"
                                   Style="{StaticResource ValueStyle}"
                                   Padding="0,0,10,0"
                                   HorizontalOptions="End"
                                   HorizontalTextAlignment="End"/>
                        </Grid>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Grid
                                HorizontalOptions="Center"
                                WidthRequest="240"
                                HeightRequest="30">

                            <Label Grid.Column="0" Text="Health"/>
                            <ProgressBar x:Name="HealthProgressBar" Grid.Column="1" Progress="{Binding Data.MaxHealth}" 
                                    ProgressColor="LimeGreen"/>
                            <Label Grid.Column="2" Text="{Binding Data.MaxHealth}" 
                                   x:Name="HealthValue"
                                   Style="{StaticResource ValueStyle}"
                                   Padding="0,0,10,0"
                                   HorizontalOptions="End"
                                   HorizontalTextAlignment="End"/>
                        </Grid>
                    </StackLayout>
                </StackLayout>

            </StackLayout>
            
        </ScrollView>

    </ContentPage.Content>
    
</ContentPage>