<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.Battle.GameOverPage"
             Title="City Taken Over!"
             BackgroundImageSource="battle_background.png">
    
    <ContentPage.Content>
        <StackLayout Style="{StaticResource CenterWithSpacingStack}">
            <Label Text="Game Over"
                HorizontalOptions="CenterAndExpand" 
                Style="{StaticResource CenterMessageLargeStyle}"/>

            <Image Source="game_over_icon.png" Style="{StaticResource StandardImageStyle}"/>

            <Button Text="View Your Results" Clicked="ViewResult_Clicked" Style="{StaticResource ButtonStyle}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>