<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.Battle.ItemSelectionPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Style="{StaticResource HorizontalCenterWithSpacingStack}">
                <ImageButton Source="left_arrow.png" 
                                 Style="{StaticResource ImageButtonSmallStyle}"
                                 Clicked="LeftImageButton_Clicked"/>
                
                <StackLayout Orientation="Vertical">
                    <Image x:Name="itemImage" Source="{Binding Data.ImageURI}" Style="{StaticResource ImageLargerStyle}"/>
                    <Label x:Name="itemName" Style="{StaticResource ColouredLargeLabelStyle}"/>
                        
                </StackLayout>
                
                        <ImageButton Source="right_arrow.png" 
                                 Style="{StaticResource ImageButtonSmallStyle}"
                                 Clicked="RightImageButton_Clicked"/>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>