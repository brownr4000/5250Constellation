<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.Battle.BattleEntryPage"
             Title="Let's Protect Our City!">
    <ContentPage.Content>
        <StackLayout WidthRequest="1080" HeightRequest="1920">
            <Image Source="Background_AHGV.png"/>

            <StackLayout Orientation="Horizontal" Padding="20">
                <ImageButton Source="Cancel_Button.png" Style="{StaticResource ImageButtonStyle}" HorizontalOptions="Start" Clicked="CancelButton_Clicked"/>
                <ImageButton Source="item.png" Style="{StaticResource ImageButtonStyle}" HorizontalOptions="EndAndExpand" Clicked="ProtectButton_Clicked"/>

            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>