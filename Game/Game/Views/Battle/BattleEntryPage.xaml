<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.Battle.BattleEntryPage"
             Title="Let's Protect Our City!"
              BackgroundImageSource="battle_background.png">
    
    <ContentPage.Content>
        <StackLayout Style="{StaticResource HorizontalCenterWithPaddingForBattleStack}">
            <Image Source="UFO.png" Style="{StaticResource ImageLargerStyle}"/>

            <StackLayout Style="{StaticResource HorizontalOrientationStack}">
                <ImageButton Source="cancel_button.png" 
                             Style="{StaticResource ImageStartButtonStyle}" 
                             Clicked="CancelButton_Clicked"/>
                <ImageButton 
                            Source="enter_button.png"
                            Style="{StaticResource ImageEndButtonStyle}"
                            Clicked="ProtectButton_Clicked"/>
            </StackLayout>           
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>