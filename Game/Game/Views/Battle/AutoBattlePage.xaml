<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.AutoBattlePage"
              BackgroundImageSource="battle_background.png">

    <ContentPage.Content>
        <StackLayout Style="{StaticResource VerticalCenterExpandWithPaddingSpacingStack}">
            <StackLayout Style="{StaticResource AutoBattleCardImageTextBox}">

                <ImageButton
                        Source="UFO.png"
                        Style="{StaticResource ImageLargeStyle}"
                        Clicked="AutobattleButton_Clicked"/>

                <Label 
                        Text="Begin Battle"
                        Style="{StaticResource ColouredLargeLabelStyle}"/>
            </StackLayout>

            <StackLayout Style="{StaticResource AutoBattleCardImageTextBox}">

                <Label 
                    x:Name="BattleMessageValue"                    
                    Style="{StaticResource AutoBattleMessageStyle}"/>
               
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
