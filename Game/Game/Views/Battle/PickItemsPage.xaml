<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.PickItemsPage"
             Title="Pick Your Weapon!"
             >

    <ContentPage.Content>
        <StackLayout Style="{StaticResource VerticalStack}">

            <Image Source="{Binding Data.ImageURI}" 
                                   Style="{StaticResource ImageLargeStyle}"
                                   Grid.Row="0" Grid.Column="1"/>

            <FlexLayout Padding="0,20,0,0"                       
                            Wrap="Wrap"
                            JustifyContent="SpaceAround"
                            AlignContent="SpaceAround"
                            x:Name="ItemBox">
            </FlexLayout>

            <StackLayout Style="{StaticResource HorizontalCenterWithPaddingSpacingStack}">
                <Button Text="Back"
                                    Style="{StaticResource ButtonStyle}"
                                    Clicked="Cancel_Clicked"/>

                <Button Text="Protect City!"
                                    Style="{StaticResource ButtonStyle}"
                                    Clicked="Protect_Clicked"/>
            </StackLayout>

        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>